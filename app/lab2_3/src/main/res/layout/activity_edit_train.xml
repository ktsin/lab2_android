<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    tools:context=".EditTrainActivity">
    <TextView
        android:id="@+id/train_number_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Номер поезда: "
        android:layout_margin="5dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/train_number_edit"

        />

    <EditText
        android:id="@+id/train_number_edit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:inputType="text"
        android:minHeight="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />

    <TextView
        android:id="@+id/end_point_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Пункт назанчения: "
        android:textColor="@color/black"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/train_number_edit"
        app:layout_constraintLeft_toLeftOf="parent"

        />

    <EditText
        android:id="@+id/end_point_edit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"

        android:minHeight="48dp"
        app:layout_constraintBaseline_toBaselineOf="@id/end_point_caption"

        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/departure_time_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Время отправления: "
        android:textColor="@color/black"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/end_point_edit"
        app:layout_constraintLeft_toLeftOf="parent"

        />

    <EditText
        android:id="@+id/departure_time_edit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"

        android:inputType="time"
        android:minHeight="48dp"
        app:layout_constraintBaseline_toBaselineOf="@id/departure_time_caption"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/basic_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Стандартные места: "
        android:textColor="@color/black"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/departure_time_edit"
        app:layout_constraintLeft_toLeftOf="parent"

        />

    <EditText
        android:id="@+id/basic_edit"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:inputType="number"
        android:minHeight="48dp"
        app:layout_constraintBaseline_toBaselineOf="@id/basic_caption"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/coupe_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Купе: "
        android:textColor="@color/black"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/basic_edit"
        app:layout_constraintLeft_toLeftOf="parent"

        />

    <EditText
        android:id="@+id/coupe_edit"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:inputType="number"
        android:minHeight="48dp"
        app:layout_constraintBaseline_toBaselineOf="@id/coupe_caption"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/common_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Плацкарт: "
        android:textColor="@color/black"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/coupe_edit"
        app:layout_constraintLeft_toLeftOf="parent"

        />

    <EditText
        android:id="@+id/common_edit"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:inputType="number"
        android:minHeight="48dp"
        app:layout_constraintBaseline_toBaselineOf="@id/common_caption"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/luxury_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Лухари места: "
        android:textColor="@color/black"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/common_edit"
        app:layout_constraintLeft_toLeftOf="parent"

        />

    <EditText
        android:id="@+id/luxury_edit"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:inputType="number"
        android:minHeight="48dp"
        app:layout_constraintBaseline_toBaselineOf="@id/luxury_caption"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/luxury_caption" />

    <LinearLayout
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/luxury_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Сохранить"
            android:layout_margin="5dp"
            />
        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Отмена"
            android:layout_margin="5dp"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>