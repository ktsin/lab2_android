<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity">

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/destination_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="32dp"
        app:layout_constraintBaseline_toBaselineOf="@id/search_apply"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/hour_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="32dp"
        app:layout_constraintBaseline_toBaselineOf="@id/search_apply"
        app:layout_constraintLeft_toRightOf="@id/destination_spinner"
        app:layout_constraintTop_toTopOf="parent"
        android:entries="@array/hours"
        />
    <TextView
        android:id="@+id/basic_caption1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/hour_spinner"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/search_apply"
        android:text="Общие места: "
        />
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/basic_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/search_apply"
        app:layout_constraintLeft_toRightOf="@id/basic_caption1"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/search_apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/basic_switch"
        app:layout_constraintTop_toTopOf="parent"

        android:text="Поиск"
        android:layout_margin="10dp"
        />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@id/search_apply"
        android:layout_marginTop="20dp"

        />


</androidx.constraintlayout.widget.ConstraintLayout>